// Jenkinsfile

try {

  stage('checkout') {
      node {
        cleanWs()
        checkout scm
      }
  }
  stage('init') {
    node {  
      withCredentials([
        azureServicePrincipal('azserviceprincipal')]) {
          ansiColor('xterm') {
          sh 'cd ./1-main-rg-wrkspaces/ && terraform init && ls -a'
          sh 'pwd && ls -a'
          }     
        }
    }  
  }    
  stage('create workspace') {
    node {  
      withCredentials([
        azureServicePrincipal('azserviceprincipal')]) {
          ansiColor('xterm') {
          sh 'cd ./1-main-rg-wrkspaces/terraform.tfstate.d/ && terraform workspace new "production"'
          }     
        }
    }  
  }
  stage('Azure CLI') {
    node {  
      withCredentials([
        azureServicePrincipal('azserviceprincipal')]) {
          ansiColor('xterm') {
          sh 'az login --service-principal -u $AZURE_CLIENT_ID -p $AZURE_CLIENT_SECRET --tenant $AZURE_TENANT_ID'
          sh 'cd ./1-main-rg-wrkspaces/ && terraform plan -var-file="./prod.tfvars" -out ./terraform.tfstate.d/production/prod.tfplan'
          }     
        }
    }  
  }
  stage('plan') {
    node {  
      withCredentials([
        azureServicePrincipal('azserviceprincipal')]) {
          ansiColor('xterm') {
          sh 'pwd && ls -a'
          sh 'export ARM_CLIENT_ID="$AZURE_CLIENT_ID" && export ARM_CLIENT_SECRET="$AZURE_CLIENT_SECRET" && export ARM_SUBSCRIPTION_ID="AZURE_SUBSCRIPTION_ID" && export ARM_TENANT_ID="AZURE_TENANT_ID"'
          }     
        }
    }  
  }
  stage('apply') {
    node {  
      withCredentials([
        azureServicePrincipal('azserviceprincipal')]) {
          ansiColor('xterm') {
          sh 'cd ./1-main-rg-wrkspaces/ && terraform apply -var-file="./prod.tfvars"'
          }     
        }
    }  
  }
  stage('show') {
    node {  
      withCredentials([
        azureServicePrincipal('azserviceprincipal')]) {
          ansiColor('xterm') {
          sh 'terraform show'
          }     
        }
    }  
  }
}
catch (org.jenkinsci.plugins.workflow.steps.FlowInterruptedException flowError) {
  currentBuild.result = 'ABORTED'
}
catch (err) {
  currentBuild.result = 'FAILURE'
  throw err
}
finally {
  if (currentBuild.result == 'SUCCESS') {
    currentBuild.result = 'SUCCESS'
  }
}
